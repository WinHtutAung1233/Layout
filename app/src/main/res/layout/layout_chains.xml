<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"


    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="A"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@id/btnB"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        app:layout_constraintRight_toLeftOf="@id/btnC"
        app:layout_constraintLeft_toRightOf="@id/btnA"
        app:layout_constraintBaseline_toBaselineOf="@id/btnA"
        />
    <Button
        android:id="@+id/btnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnB"
        app:layout_constraintBaseline_toBaselineOf="@id/btnA"
        />
    <Button
        android:id="@+id/btnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="D"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/btnA"
        app:layout_constraintRight_toLeftOf="@id/btnE"

        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btnE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:layout_margin="12dp"
        app:layout_constraintRight_toLeftOf="@id/btnF"
        app:layout_constraintLeft_toRightOf="@id/btnD"
        app:layout_constraintBaseline_toBaselineOf="@id/btnD"
        />
    <Button
        android:id="@+id/btnF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnE"
        app:layout_constraintBaseline_toBaselineOf="@id/btnD"
        />
    <Button
        android:id="@+id/btnG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/btnD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnH"
        />
    <Button
        android:id="@+id/btnH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        app:layout_constraintLeft_toRightOf="@id/btnG"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btnG"
        />

    <Button
        android:id="@+id/btnI"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="I"
        app:layout_constraintHorizontal_weight="10"
        app:layout_constraintTop_toBottomOf="@id/btnG"
        app:layout_constraintRight_toLeftOf="@id/btnJ"

        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:id="@+id/btnJ"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="J"
        app:layout_constraintHorizontal_weight="2"

        app:layout_constraintRight_toLeftOf="@id/btnK"
        app:layout_constraintLeft_toRightOf="@id/btnI"
        app:layout_constraintBaseline_toBaselineOf="@id/btnI"
        />
    <Button
        android:id="@+id/btnK"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="K"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnJ"
        app:layout_constraintBaseline_toBaselineOf="@id/btnI"
        />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        android:src="@drawable/ic"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnK"
        />

    <Button
        android:id="@+id/btn_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="round"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />







</androidx.constraintlayout.widget.ConstraintLayout>